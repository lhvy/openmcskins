{
  "schemaVersion": 1,
  "id": "${mod_name}",
  "version": "${version}",
  "name": "OpenMCSkins",
  "description": "Mod that's allows to use own skins and capes",
  "authors": [
    "Zatrit156"
  ],
  "contact": {
    "homepage": "${mod_url}",
    "sources": "${mod_url}",
    "issues": "${mod_url}/issues"
  },
  "license": "Apache License 2.0",
  "icon": "assets/openmcskins/icon.png",
  "environment": "client",
  "entrypoints": {
    "main": [
      "net.zatrit.openmcskins.OpenMCSkins"
    ],
    "modmenu": [
      "net.zatrit.openmcskins.ModMenuEntry"
    ]
  },
  "mixins": [
    "openmcskins.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.13.3",
    "minecraft": ">=1.17",
    "java": ">=16",
    "fabric-resource-loader-v0": "*"
  },
  "breaks": {
    "offlineskins": "*",
    "optifabric": "*"
  }
}
